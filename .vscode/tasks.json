{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Buid",
            "type": "shell",
            "options": {"cwd": "./RTL"},
            "command": "make",
           
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Program CPLD",
            "type": "shell",
            "options": {"cwd": "./RTL"},
            "command": "make",
            "args": [
                "prog"
            ]           
        },
        {
            "label": "Build & Program CPLD",
            "type": "shell",
            "options": {"cwd": "./RTL"},
            "command": "make",
            "args": [
                "all"
            ]           
        }
    ],
    "problemMatcher" : "$lessCompile"
}